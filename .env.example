# Maya AI News Anchor - Environment Variables
# Copy this file to .env and fill in your values

# ===================
# REQUIRED SETTINGS
# ===================

# OpenAI API Key for LLM-powered synthesis
OPENAI_API_KEY=sk-your-openai-api-key

# HeyGen for video generation
HEYGEN_API_KEY=your-heygen-api-key
MAYA_AVATAR_ID=your-avatar-id
MAYA_VOICE_ID=your-voice-id

# Supabase for database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# ===================
# OPTIONAL SETTINGS
# ===================

# App Settings
DEBUG=false
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# LangSmith (for observability - free tier)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls-your-langsmith-api-key
LANGCHAIN_PROJECT=maya-weekly-news

# OpenAI Model (default: gpt-4o)
OPENAI_MODEL=gpt-4o

# Blotato for social media posting
BLOTATO_API_KEY=your-blotato-api-key
BLOTATO_BASE_URL=https://api.blotato.com/v1

# Telegram (for news aggregation from channels)
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash

# Notifications - Choose Slack OR Telegram Bot

# Slack (for approval notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
SLACK_CHANNEL=#maya-content

# Telegram Bot (alternative to Slack)
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id
